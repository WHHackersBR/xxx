			<header>旋转 </header>
			<item  checked="no" onactivate="rotate('0')"> rotate   0 </item>
			<item  checked="no" onactivate="rotate('90')"> rotate 90 </item>
			<item  checked="no" onactivate="rotate('180')"> rotate 180 </item>
			<item  checked="no" onactivate="rotate('270')"> rotate 270 </item>
		</menu>
