		     <!-- Sichtpruefungs menue -->
<menu>		
     	<header>Adobe SVG Viewer</header>
		<menu id="technology">
			<header>选择 SMD/THT</header>
			<item id="SMD" checked="no" onactivate="chooseTech('SMD')"> SMD </item>
			<item id="THT" checked="no" onactivate="chooseTech('THT')"> THT </item>
			<item id="SMDTHT" checked="no" onactivate="chooseTech('ALL')"> Show All </item>
			<separator/>
		</menu>
		<menu id="side">
			<header>零件面显示</header>
			<item id="csSide" checked="no" onactivate="chooseSide('CS')"> CS </item>
			<item id="ssSide" checked="no" onactivate="chooseSide('SS')"> SS </item>
			<item id="Side" checked="no" onactivate="chooseSide('AB')"> ALL </item>
			<separator/>
		</menu>
		<!--item id="#LP" checked="no" onactivate="panelError(evt)">Panel error</item-->
		<separator/>
		<menu id="layer">
			<header>层选择 </header>
			<item id="layer01" checked="no" onactivate="chooseLayer('layer01')"> replaced by layer name of SVG file </item>
		</menu>
		<separator/>
		<menu id="search">
			<header>搜索 </header>
			<item  checked="no" onactivate="searchComp('refdes')"> 零件位置/RefDes </item>
			<item  checked="no" onactivate="searchComp('partNumber')"> 零件号/Part Number </item>
			<item  checked="no" onactivate="searchComp('partDesc')"> 零件描述/Part Desc. </item>
			<item  checked="no" onactivate="searchComp('samePart')"> 同型显示/Same Part. </item>
		</menu>
		<separator/>
		
       <separator/>
		<item action="ZoomIn">放大  (Ctrl + Mouse left expand)</item>
		<item action="ZoomOut">缩小 (Ctrl + shift + Mouse left expand)</item>
